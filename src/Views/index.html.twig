<!-- header -->
{% include 'header.twig' %}

<body>
    <!-- home page top -->
    <!-- hero -->
    <section class="hero">
        <div class="hero-text">
            <h5 data-aos ="fade-right" data-aos-duration="2000">#Stage et Talents connectés en un instant</h5>
            <h1 data-aos ="zoom-in-left" data-aos-duration="1400" data-aos-delay="200"> Cesi Stage Finder</h1>
